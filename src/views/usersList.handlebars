<html lang="en">

<head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <link rel="stylesheet" type="text/css" href="/css/efectoshoover.css" />
      <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous" />
      <title>Carrito</title>
</head>

<body>

      <header>
            <nav class="navegador">
                  <div class="imgLogo">
                        <img src="/img/twitter_header_photo_1.png" alt="Imagen Logo Empresa" />
                  </div>
                  <div class="dropdown">
                        <button class="btn btn-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                              DETALLES
                              <i class="bi bi-arrow-down" style="font-size: 24px; color: black;"></i>
                        </button>
                        <ul class="dropdown-menu">
                              <li>
                                    <p><strong>Role:</strong> {{user.role}}</p>
                              </li>
                              <ul class="menu">
                                    <li>
                                          <a id="volverLink" href="/admin" data-rol="{{user.role}}">
                                                <span>Volver</span>
                                                <span>
                                                      <i class="bi bi-arrow-bar-left"></i>
                                                </span>
                                          </a>
                                    </li>
                              </ul>
                        </ul>
                  </div>
            </nav>
      </header>
      <main>
            <div class="contenedorCarrito">
                  <div class="contenedorDescripcion">
                        <div class="carritoVacio">
                        </div>
                        <table class="table table-info table-hover table-borderless">
                              <thead>
                                    <tr>
                                          <th scope="col" class="encabezado"><strong>NOMBRE</strong></th>
                                          <th scope="col" class="encabezado"><strong>APELLIDO</strong></th>
                                          <th scope="col" class="encabezado"><strong>EMAIL</strong></th>
                                          <th scope="col" class="encabezado"><strong>ROLE</strong></th>
                                          <th scope="col" class="encabezado"><strong>EDAD</strong></th>
                                          <th scope="col" class="encabezado"><strong>ULTIMA CONEXIÓN</strong></th>
                                          <th scope="col" class="encabezado"><strong>ID</strong></th>
                                          <th scope="col" class="encabezado"><strong>ACCIÓN</strong></th>
                                    </tr>
                              </thead>
                              <tbody>
                                    {{#each users}}
                                    <tr>
                                          <td>{{this.firstName}}</td>
                                          <td>{{this.lastName}}</td>
                                          <td>{{this.email}}</td>
                                          <td>{{this.role}}</td>
                                          <td>{{this.age}}</td>
                                          <td>{{this.last_connection}}</td>
                                          <td>{{this.id}}</td>
                                          <td>
                                                <button class="btn btn-secondary" type="button" id="cambiarRolBtn"
                                                      onclick="cambiarDeRol('{{this.id}}')">
                                                      Cambiar Rol <i class="bi bi-toggle-on"></i>
                                                </button>
                                                <button class="btn btn-secondary" type="button" id="elminarUsuarioBtn"
                                                      onclick="eliminarUsuario('{{this.id}}')">
                                                      Eliminar Usuario <i class="bi bi-trash-fill"></i>
                                                </button>
                                          </td>
                                    </tr>
                                    {{/each}}
                              </tbody>
                        </table>
                  </div>
            </div>
      </main>
      <footer>
            <nav class="navegador">
                  <div class="textoFooter">
                        <h2>
                              Proyecto Backend Nicolas Davi ©
                        </h2>
                  </div>
                  <div class="iconosFooter">
                        <i class="bi bi-twitter-x"></i>
                        <i class="bi bi-instagram"></i>
                        <i class="bi bi-facebook"></i>
                        <i class="bi bi-whatsapp"></i>
                  </div>
            </nav>
      </footer>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script src="/js/admin.js"></script>
</body>
</html>